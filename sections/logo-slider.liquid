
<div class="logo-swiper">
<div class="page-width">
<div class="u-partners-slide">


  <div class="swiper logo-slider">
        <div class="swiper-wrapper">
           
  {%- for block in section.blocks -%} 

            <div class="swiper-slide">
              
              
   <img src="{{ block.settings.logo | img_url: '' }}">
              
              
              
          </div>
          
 {% endfor %} 
          
        </div>
    
        <div class="swiper-pagination"></div>
     

  
  
  </div>

  </div>
  
</div>
</div>


<link rel="stylesheet" href="https://cdn.shopify.com/s/files/1/0612/4643/9618/t/1/assets/swiper-bundle.min.css">  
  
  <script src="https://cdn.shopify.com/s/files/1/0612/4643/9618/t/1/assets/swiper-bundle.min.js"></script>


<script>
      var swiper = new Swiper(".logo-slider", {
      slidesPerView: 1,
        spaceBetween: 10,
        pagination: {
          el: ".swiper-pagination",
          clickable: true,
        },
        breakpoints: {
          640: {
            slidesPerView: 2,
            spaceBetween: 20,
          },
          768: {
            slidesPerView: 4,
            spaceBetween: 40,
          },
          1024: {
            slidesPerView: 5,
            spaceBetween: 50,
          },
        },
      });
  
</script>

