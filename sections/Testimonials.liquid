
<div class="testimonial-swiper testimonials">
<div class="page-width">
<div class="u-partners-slide">

  <h2 class="head-border-yellow"><span>{{ section.settings.heading }}</span></h2>
  <div class="swiper testimonials-slider">
        <div class="swiper-wrapper">
           
  {%- for block in section.blocks -%} 

            <div class="swiper-slide">
              
              
               <h2> {{ block.settings.quote }} </h2>
              
               <p>{{ block.settings.author }}</p>
              
              
              
          </div>
          
 {% endfor %} 
          
        </div>
    
        <div class="swiper-pagination"></div>
     
     <a href="{{ section.settings.button-testimonial }}" class="btn common-btn">
          {{ section.settings.button_label | escape }}
        </a> 
  
  
  </div>

  </div>
  
</div>
</div>


<link rel="stylesheet" href="https://cdn.shopify.com/s/files/1/0612/4643/9618/t/1/assets/swiper-bundle.min.css">  
  
  <script src="https://cdn.shopify.com/s/files/1/0612/4643/9618/t/1/assets/swiper-bundle.min.js"></script>


<script>
      var swiper = new Swiper(".testimonials-slider", {
      slidesPerView: 1,
        spaceBetween: 10,
        pagination: {
          el: ".swiper-pagination",
          clickable: true,
        },
        breakpoints: {
          640: {
            slidesPerView: 1,
            spaceBetween: 20,
          },
          768: {
            slidesPerView: 2,
            spaceBetween: 40,
          },
          1024: {
            slidesPerView: 1,
            spaceBetween: 50,
          },
        },
      });
  
</script>

{% schema %}
{
  "name": {
    "en": "testimonial custom"
  },
  "class": "index-section",
    "settings": [

  {
      "type": "image_picker",
      "id": "testimonial-bg",
      "label": {
        "en": "testimonial-bg"
         }
    },
{
      "type": "text",
      "id": "heading",
      "label": {
        "en": "Heading"
      },
      "default": {
        "en": "Image with text"
      }
    },
    {
      "type": "text",
      "id": "button_label",
      "label": {
        "en": "Button label"
      }
    },
    {
      "type": "url",
      "id": "button-testimonial",
      "label": {
        "en": "Button link"
     }
    }



],
  "blocks": [
    {
      "type": "quote",
      "name": {

        "en": "testimonial custom"

      },
      "settings": [
         {
      "type": "richtext",
      "id": "quote",
      "label": {
         "en": "Text"
      }
    },
           {
      "type": "text",
      "id": "author",
      "label": {
        "en": "Heading"
      },
      "default": {
        "en": "Author Name"
      }
    }
        
      ]
    }
  ],

  "presets": [
    {
      "name": {
        "en": "testimonial custom"
      },
      "category": {
        "en": "Image"
      }
    }
  ]
}

{% endschema %}